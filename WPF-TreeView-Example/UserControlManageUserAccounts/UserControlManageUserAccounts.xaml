<UserControl x:Class="WPF_TreeView_Example.UserControlManageUserAccounts.UserControlManageUserAccounts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_TreeView_Example.UserControlManageUserAccounts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Background="{StaticResource GradientTextBoxTitle_Background}"  Foreground="White" FontWeight="Bold" FontSize="24">User Accounts</TextBlock>
            <StackPanel Background="LightYellow">
                <TextBlock  Foreground="Blue" Margin="8,10,0,0"  TextWrapping="Wrap">Manage The User Accounts in the database</TextBlock>
                <TextBlock  Foreground="Blue" Name="labStatus" Height="32" TextWrapping="WrapWithOverflow"></TextBlock>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
